<h1>Login</h1>
<%= form_for :session, url: login_path do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Login" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
